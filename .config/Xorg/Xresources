! URxvt
! View man urxvt for settings

! General settings

URxvt.savelines: 2000
URxvt.scrollBar: False
URxvt.termName: xterm-256color
URxvt.transparent: true
URxvt.shading: 10
URxvt.urgentOnBell: true


! Extensions
URxvt.perl-ext-common: default,clipboard,url-select,keyboard-select
URxvt.url-select.launcher: vimb
URxvt.url-select.underline: true
URxvt.keysym.M-l: 		perl:url-select:select_next
URxvt.keysym.M-t: 		perl:keyboard-select:activate
URxvt.keysym.M-s: 		perl:keyboard-select:search
URxvt.keysym.M-v: 		perl:clipboard:paste

!Font
!Inconsolata with dejavu and unifont for fallback
URxvt.font: xft:Inconsolata:style=Regular:size=12, \
            xft:Dejavu sans mono:size=11, \
             -*-unifont-*-*-*-*-*-*-*-*-*-*-*-*

! Tango theme

URxvt.background: #1C1C1C
URxvt.foreground: #DEDEDE

