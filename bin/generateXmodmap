#!/bin/bash

xconfdir="$HOME/.config/Xorg"
xmodmapglobal="$xconfdir/XmodmapGlobal"
xmodmappatch="$xconfdir/Xmodmap.patch"

patch "$xmodmapglobal" -i "$xmodmappatch" -o "$xconfdir"/Xmodmap

